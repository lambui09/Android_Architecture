<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivQuickLinkItem"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toTopOf="@id/tvQuickLinkItem"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvQuickLinkItem"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="Danh muc"
        android:textAlignment="center"
        android:textColor="@color/K_666666_black"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/ivQuickLinkItem"
        app:layout_constraintStart_toStartOf="@id/ivQuickLinkItem"
        app:layout_constraintTop_toBottomOf="@id/ivQuickLinkItem" />


</androidx.constraintlayout.widget.ConstraintLayout>